{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  //"parser": "babel-eslint",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "class-methods-use-this": "off",
    "require-await": "off",
    "@typescript-eslint/camelcase": "off",
    "no-unused-vars": "off",
    "camelcase": "off",
    "no-useless-constructor": "off",
    "space-in-brackets": "off",
    "prettier/prettier": "error",
    // "@typescript-eslint/interface-name-prefix": [
    //   "error",
    //   {
    //     "prefixWithI": "always"
    //   }
    // ],
    "@typescript-eslint/no-unused-vars": [
      "off",
      {
        "argsIgnorePattern": "_"
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
